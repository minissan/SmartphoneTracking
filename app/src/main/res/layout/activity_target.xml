<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".LocationActivity"
    android:background="@drawable/background">

    <TextView
        android:text="TARGET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:background="#080808" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Show Location"
        android:textSize="30dp"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/btnShowLocation2"
        android:background="@drawable/selector" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Connect Bluetooth"
        android:textSize="30dp"
        android:padding="10dp"
        android:id="@+id/bluetoothconnect"
        android:background="@drawable/selector"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send Bluetooth Msg"
        android:visibility="gone"
        android:textSize="30dp"
        android:padding="10dp"
        android:id="@+id/bluetoothsend"
        android:background="@drawable/selector"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/trackernumber2"
        android:text="TRACKER NO : 0123456789"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:padding="2dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/tvLocation2"
        android:text="STATUS : No Signal"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textColor="#000000"/>


</LinearLayout>